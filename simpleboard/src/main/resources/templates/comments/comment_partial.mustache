    {{#comment}}
        <div>
            {{#parentId}}
            <label>re to {{parentId}}: {{comment}}</label>
            {{/parentId}}
            {{^parentId}}
            <label>{{id}} : {{comment}}</label>
            {{/parentId}}
            <button type="text" onclick="doDeleteComment({{boardId}}, {{postId}}, {{id}})">delete</button>
            <button type="text" onclick="clickEditCommentBtn({{id}})">edit</button>
