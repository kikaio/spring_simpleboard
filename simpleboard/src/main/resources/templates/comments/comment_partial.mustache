                <input type="hidden" name="postId" value="{{postId}}">
                {{#parentId}}
                    <input type="hidden" name="parentId" value="{{parentId}}">
                {{/parentId}}
                <input type="hidden" name="isDeleted" value="{{isDeleted}}">
                <input type="hidden" name="isParentLive" value="{{isParentLive}}">
                <label>{{id}}'s update comment : </label><input type="text" name="comment">
                <input type="submit" value="do update!">
                <button type="button" onclick="cancleEditCommentBtn({{id}})">cancle update.</button>
            </form>
        </div>
